<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_sm">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleEurTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/_0_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/eurCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/eur"
        android:textColor="#c4c4c4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/titleEurTextView"
        app:layout_constraintEnd_toEndOf="@id/titleEurTextView"
        app:layout_constraintTop_toTopOf="@id/titleEurTextView"
        tools:text="EUR" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleJpyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/_0_0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEurTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/jpyCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/jpy"
        android:textColor="#c4c4c4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/titleJpyTextView"
        app:layout_constraintEnd_toEndOf="@id/titleJpyTextView"
        app:layout_constraintTop_toTopOf="@id/titleJpyTextView"
        tools:text="JPY" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleGbpTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/_0_0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleJpyTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gbpCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/gbp"
        android:textColor="#c4c4c4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/titleGbpTextView"
        app:layout_constraintEnd_toEndOf="@id/titleGbpTextView"
        app:layout_constraintTop_toTopOf="@id/titleGbpTextView"
        tools:text="GBP" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleBrlTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="20dp"
        android:text="@string/_0_0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleGbpTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/blrCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/blr"
        android:textColor="#c4c4c4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/titleBrlTextView"
        app:layout_constraintEnd_toEndOf="@id/titleBrlTextView"
        app:layout_constraintTop_toTopOf="@id/titleBrlTextView"
        tools:text="BLR" />
</androidx.constraintlayout.widget.ConstraintLayout>